{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitOverride": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./test"
  ],
  "ts-node": {
    "esm": true
  }
}